{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ product.name }}</h1>

    <h3>
        ${{ product.price|number_format(2) }}
    </h3>

    <div>
        {{ product.description|raw }}
    </div>

    <hr/>

    <div class="d-flex flex-row justify-content-between align-items-center">
        <form method="POST" action="{{ path('app_cart') }}" class="d-flex flex-row">
            <input type="hidden" name="product_id" value="{{ product.id }}"/>
            <input type="number" name="quantity" value="1" class="cart-item-quantity form-control"/>

            <input type="submit" class="btn btn-primary ml-3" value="Add to cart"/>
        </form>

        <a href="{{ path('app_products') }}">Get back</a>
    </div>
{% endblock %}
