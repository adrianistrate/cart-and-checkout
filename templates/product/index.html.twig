{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <h1>Products</h1>

    <h3 class="mt-3">Search</h3>
    <form method="GET">
        <div class="form-group">
            <input type="text" name="keyword" class="form-control" placeholder="Keyword" value="{{ keyword }}">
        </div>
        <button type="submit" class="btn btn-primary">Search</button>
    </form>

    <ul class="list-group mt-5">
        {% for product in pagination %}
            {{ include ('product/_product_list_item.html.twig', {product: product}) }}
        {% else %}
            <li class="list-group-item border-0 p-0">
                <div class="alert alert-warning">
                    No products found
                </div>
            </li>
        {% endfor %}
    </ul>

    <div class="navigation mt-5">
        {{ knp_pagination_render(pagination, null, queryParams) }}
    </div>
{% endblock %}
